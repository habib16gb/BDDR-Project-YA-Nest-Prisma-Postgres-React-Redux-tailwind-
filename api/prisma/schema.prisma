// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employee {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  id_manager Int?       
  manager    Employee?  @relation("ManagerEmployee", fields: [id_manager], references: [id])
  employees  Employee[] @relation("ManagerEmployee")
  store      Store?
}

model Store {
  id            Int             @id @default(autoincrement())
  name          String          @unique
  manager       Employee        @relation(fields: [id_manager], references: [id])
  id_manager    Int             @unique
  products      Product[]
  Store_Product Store_Product[]
}

model Store_Product {
  id_store   Int
  id_product Int
  store      Store   @relation(fields: [id_store], references: [id])
  product    Product @relation(fields: [id_product], references: [id])
  qte        Int     @default(0)

  @@id([id_product, id_store])
}

model Product {
  id            Int               @id @default(autoincrement())
  designation   String            @unique
  price         Decimal           @db.Decimal(15, 2)
  etat          Etat              @default(DESACTIVE)
  store         Store[]
  Store_Product Store_Product[]
  categories    Category[]
  product_cat   ProductCategory[]
}

model ProductCategory {
  id_product  Int
  id_category Int
  product     Product  @relation(fields: [id_product], references: [id])
  category    Category @relation(fields: [id_category], references: [id])

  @@id([id_category, id_product])
}

model Category {
  id          Int               @id @default(autoincrement())
  designation String            @unique
  products    Product[]
  product_cat ProductCategory[]
}

enum Etat {
  ACTIVE
  DESACTIVE
}
